<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border"

        xmlns:tools="http://schemas.android.com/tools">

        <!-- Text view for profile heading -->

<!--        <TextView-->
<!--            android:id="@+id/profileHeading"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:padding="5dp"-->
<!--            android:text="User Profile"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="@color/yellow"-->
<!--            android:textSize="20sp" />-->

        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/uscLogo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:id = "@+id/profileName">
            <ImageView
                android:layout_width="80dp"
                android:layout_height= "80dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:layout_marginLeft="60dp"
                android:text="Name:"
                android:textColor="@color/crimson"
                android:textSize="15sp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="@color/black"
                android:id = "@+id/pName"
                android:textSize="15sp" />
        </LinearLayout>
        <!-- TextView to display user's username -->
        <LinearLayout
            android:id="@+id/profileUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileName">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="UserName"
                android:textColor="@color/crimson"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/profilePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileUsername">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Password: "
                android:textColor="@color/crimson"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- TextView to display user's USC ID -->
        <LinearLayout
            android:id="@+id/profileUSCid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilePassword">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="USC ID:"
                android:textColor="@color/crimson"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pUSCid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <!-- TextView to display user's email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileUSCid"
            android:id = "@+id/profileEmail"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Email:"
                android:textColor="@color/crimson"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- TextView to display user's phone number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileEmail"
            android:id = "@+id/profilePhone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="Phone: "
                android:padding="5dp"
                android:textColor="@color/crimson" />
            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- TextView to display user's role -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilePhone"
            android:id = "@+id/profileRole"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Role:"
                android:textColor="@color/crimson" />
            <EditText
                android:id="@+id/roleEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/black" />
        </LinearLayout>
        <Button
            android:id="@+id/updateButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileRole"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Update Profile"
            android:backgroundTint="@color/yellow"
            android:textAllCaps="false"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</ScrollView>
