<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/a"
            android:padding="8dp">

            <TextView
                android:id="@+id/courseNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Course Rating" />


            <TextView
                android:id="@+id/courseRating"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0"
                android:background="@color/yellow"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/aa"
            android:layout_below="@id/a"
            android:padding="8dp">

            <TextView
                android:id="@+id/prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Professor Rating" />


            <TextView
                android:id="@+id/profRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="ya ya"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/b"
            android:layout_below="@id/aa"
            android:padding="8dp">

            <TextView
                android:id="@+id/workload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Workload" />


            <TextView
                android:id="@+id/worloadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="ya ya"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/c"
            android:layout_below="@id/b"
            android:padding="8dp">

            <TextView
                android:id="@+id/att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Attendance Required?" />


            <TextView
                android:id="@+id/attendanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="no"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/d"
            android:layout_below="@id/c"
            android:padding="8dp">

            <TextView
                android:id="@+id/hw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Late submission allowed?" />


            <TextView
                android:id="@+id/hwText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="no"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/e"
            android:layout_below="@id/d"
            android:padding="8dp">

            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Other:" />


            <TextView
                android:id="@+id/otherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/g"
            android:layout_below="@id/e"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id = "@+id/abc"
                android:layout_weight="1"
                android:layout_below="@id/e"
                android:padding="8dp">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/purple_200"
                    android:textStyle="italic"
                    android:text="student name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id = "@+id/defg"
                android:layout_weight="0"
                android:layout_below="@id/e"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:src = "@drawable/like"
                        android:layout_width="30dp"
                        android:id = "@+id/likeBtn"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:src = "@drawable/dislike"
                        android:layout_width="30dp"
                        android:id = "@+id/dislikeBtn"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/dislikeCount"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/h"
            android:visibility="gone"
            android:layout_below="@id/g"
            android:gravity="start|center_vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/editBtn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="100dp"
                android:textAllCaps="false"
                android:text="Edit Review" />


            <Button
                android:id="@+id/delBtn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Delete Review"
                android:textColor="#000"
                android:textAllCaps="false"
                android:textSize="16dp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
